<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="20dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:background="@drawable/writing_bottom_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="일정 참여자 구하기"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="제목"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/community_inner_title"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/edittext_style"
        android:fontFamily="@font/notosanskr_bold"
        android:hint="제목을 입력하세요"
        android:includeFontPadding="false"
        android:textColor="#000000"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:layout_marginVertical="5dp"
        android:includeFontPadding="false"
        android:text="인원"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edittext_style"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="현재\n인원"
                android:textColor="#000000"
                android:layout_marginEnd="10dp"/>

            <ImageButton
                android:id="@+id/community_inner_minus1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/community_inner_minus" />

            <TextView
                android:id="@+id/community_inner_presentpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="1"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/community_inner_plus1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/community_inner_plus" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="총\n인원"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginEnd="10dp"/>

            <ImageButton
                android:id="@+id/community_inner_minus2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/community_inner_minus" />

            <TextView
                android:id="@+id/community_inner_allpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:text="1"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/community_inner_plus2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/community_inner_plus" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="카톡 오픈채팅 링크"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/community_inner_kakao_link"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/edittext_style"
        android:hint="카카오톡 오픈채팅 링크를 입력해주세요"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:textColor="#000000"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="추가 설명"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/community_inner_more_explain"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/edittext_style"
        android:hint="추가 설명을 입력하세요"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:textColor="#000000"
        android:layout_marginVertical="5dp"/>

    <Button
        android:id="@+id/community_inner_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_btn"
        android:text="모집하기"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>


</LinearLayout>