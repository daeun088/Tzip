<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="17dp"
    android:background="@drawable/schedule_plan_block"
    android:id="@+id/community_block">

    <ImageView
        android:id="@+id/community_block_pic"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/schedule_example_pic"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/community_block_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/community_block_pic"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/community_block_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/community_block_title"
        android:layout_toRightOf="@+id/community_block_pic"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="period"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="5sp"/>

    <TextView
        android:id="@+id/community_block_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:layout_below="@id/community_block_period"
        android:layout_toRightOf="@id/community_block_pic"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/community_block_participant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/community_block_location"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/community_block_pic"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="participant people"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"
        android:src="@drawable/menu" />


</RelativeLayout>