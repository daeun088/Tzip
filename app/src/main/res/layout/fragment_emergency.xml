<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="긴급 상황 시 메시지를 보낼 친구들을 선택해주세요"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/notification_alert_edge"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구 목록"
            android:fontFamily="@font/notosanskr_bold"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="4dp"
            android:id="@+id/text2"


            />

        <ImageButton
            android:id="@+id/Button_2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:src="@drawable/go_btn"
            android:layout_alignParentEnd="true"
            android:contentDescription="친구 목록으로 가기"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/notification_alert_edge">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/default_profile"
            android:text="김민"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/profile1"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/default_profile"
            android:text="김민"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_toRightOf="@+id/profile1"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/profile2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/default_profile"
            android:text="김민"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_toRightOf="@+id/profile2"
            android:id="@+id/profile3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/default_profile"
            android:text="김민"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_toRightOf="@+id/profile3"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/profile4"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/emergency_message_block"
            android:layout_weight="8"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/emergency_message_title"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/notification_alert_edge"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:text="긴급 상황 시 친구들에게 보낼\n    메시지를 입력해주세요."
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/emergency_message_title"
                android:layout_marginBottom="12dp"
                android:layout_marginHorizontal="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scrollHorizontally="false"
                    android:lineSpacingExtra="20dp"/>

            </ScrollView>

        </RelativeLayout>

        <Button
            android:id="@+id/emergency_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정 완료"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:layout_gravity="center"
            android:paddingVertical="1dp"
            android:textColor="@color/white"
            android:background="@drawable/orange_btn"
            android:textSize="17sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>