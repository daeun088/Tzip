<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="7dp"
    android:background="@drawable/notification_alert_block">

    <TextView
        android:id="@+id/notificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/notificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notificationText"
        android:layout_marginVertical="12dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/notification_permission_button"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="100sp"
        android:paddingVertical="25sp"
        android:textColor="#FB6E52"
        android:textStyle="bold" />

</RelativeLayout>