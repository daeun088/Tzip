<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mypage_community_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_stroke"
    android:paddingVertical="10dp">


    <ImageView
        android:id="@+id/mypage_community_image"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/record_feed_layout"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/testimage" />

    <TextView
        android:id="@+id/mypage_community_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/mypage_community_image"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/inter"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/location_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/mypage_community_image"
        android:layout_marginTop="180dp"
        android:src="@drawable/location_pin" />

    <TextView
        android:id="@+id/mypage_community_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="180dp"
        android:layout_toEndOf="@id/location_pin"
        android:fontFamily="@font/inter"
        android:text="location" />

    <TextView
        android:id="@+id/mypage_community_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/mypage_community_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/inter"
        android:text="date" />

</RelativeLayout>