<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:id="@+id/schedule_plan_block_date"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:id="@+id/schedule_plan_block_time"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:layout_toRightOf="@+id/schedule_plan_block_date"
                android:textSize="15sp"
                android:layout_alignBaseline="@+id/schedule_plan_block_date"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/schedule_plan_block"
        android:id="@+id/schedule_plan_block">

        <TextView
            android:id="@+id/schedule_plan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:paddingStart="30sp"
            android:paddingTop="1dp"
            android:text="호텔"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schedule_plan_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/schedule_plan_title"
            android:layout_marginStart="6sp"
            android:layout_toRightOf="@id/schedule_plan_title"
            android:fontFamily="@font/notosanskr_bold"
            android:text="신라호텔"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/schedule_plan_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_plan_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:contentDescription="여행 사진"
            android:src="@drawable/schedule_plan_block_example" />

    </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/schedule_plan_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="18dp"
        android:background="@drawable/schedule_plan_default_block" />



</LinearLayout>